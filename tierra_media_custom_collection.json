{
    "info": {
        "_postman_id": "custom-tierra-media-collection",
        "name": "Tierra Media API - Custom & Optional",
        "description": "Colección personalizada que incluye Endpoint Opcional de Búsqueda",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:8000/api",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Optional Features",
            "item": [
                {
                    "name": "Search Hero by Name",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/heroes/search?name=Hero_Test",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "heroes",
                                "search"
                            ],
                            "query": [
                                {
                                    "key": "name",
                                    "value": "Hero_Test"
                                }
                            ]
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test(\"Status code is 200\", function () {",
                                    "    pm.response.to.have.status(200);",
                                    "});",
                                    "",
                                    "pm.test(\"Response is an array\", function () {",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.expect(jsonData).to.be.an('array');",
                                    "});"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ]
                },
                {
                    "name": "Search Hero by Rank",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/heroes/search?rank=Explorador",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "heroes",
                                "search"
                            ],
                            "query": [
                                {
                                    "key": "rank",
                                    "value": "Explorador"
                                }
                            ]
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test(\"Status code is 200\", function () {",
                                    "    pm.response.to.have.status(200);",
                                    "});"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ]
                }
            ]
        }
    ]
}